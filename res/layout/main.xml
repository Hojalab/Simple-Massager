<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

<Button android:id="@+id/Massage" android:layout_height="wrap_content" android:text="Start" android:layout_width="fill_parent" android:typeface="normal"></Button>
	<RadioGroup android:id="@+id/RadioGroup01"
		android:layout_width="wrap_content" android:layout_height="wrap_content">
		<RadioButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:id="@+id/RadioButtonRandomRepeat"
			android:text="@string/RandomRepeat" android:checked="true"></RadioButton>
		<RadioButton android:id="@+id/RadioButton01"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/Continuous"></RadioButton>
	</RadioGroup>
</LinearLayout>
